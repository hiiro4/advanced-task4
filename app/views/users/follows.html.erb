<div class="container">
  <div class="row">
    <div class=" col-md-8 offset-md-1">
<h1>Follow Users</h1>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数:<%= user.following_user.count%></td>
        <td>フォロワー数:<%= user.follower_user.count%></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <%end%>
  </tbody>
</div>
</div>
</div>